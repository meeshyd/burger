
<div class="row">
  <div class="col s12 m6 center-align">
    <h5>Need to Eat</h5>
    <div id="to-eat-div">
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button class="waves-effect waves-light red btn" type="submit">{{this.burger_name}}</button>
              </form>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="col s12 m6 center-align">
    <h5>Devoured Burgers</h5>
    <div id="devoured-div">
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
<!--               <h6>{{this.burger_name}}</h6> -->
<!-- 
              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false"> -->
                <button class="btn disabled">{{this.burger_name}}</button>
<!--               </form> -->
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
<div class="row">
  <div class="col m12 center-align">
    <h5>Add a Burger</h5>
    <form class="create-update-form" action="/index" method="POST">

      <div class="form-group">
        <input type="text" id="ca" name="burger_name" placeholder="Burger Name" class="center-align">
      </div>
      <button class="waves-effect waves-light red btn pulse" type="submit">Add Burger</button>
    </form>
  </div>
</div>